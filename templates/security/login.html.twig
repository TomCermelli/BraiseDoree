{% extends 'base.html.twig' %}

{% block body %}

<h1>Connexion</h1>

<!-- S'il y a une erreur, on l'affiche -->
  {% if error %}
    <div class="alert alert-danger">Votre Identifiant ou mot de passe est incorrect</div>
  {% endif %}

<form action="{{ path('security_login') }}" method="post">
  <div class="form-group">
    <input placeholder="Adresse email ..." type="text" required name="_username" class="username" value="{{ last_username }}">
  </div>
  <div class="form-group">
    <input placeholder="Mot de passe ..." type="password" required name="_password" class="password" value="">
  </div>
  <div>
    <button type="submit" class="btn btn-succes">Connexion</button>
  </div>
</form>

{% endblock %}
