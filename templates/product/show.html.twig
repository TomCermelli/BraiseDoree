{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <h1>Product</h1>

    <table class="table">
        <tbody>
            <tr>
                <th class="redcol">Type</th>
                <td class="whitecol">{{ product.type }}</td>
            </tr>
            <tr>
                <th class="redcol">Id</th>
                <td class="whitecol">{{ product.id }}</td>
            </tr>
            <tr>
                <th class="redcol">Name</th>
                <td class="whitecol">{{ product.name }}</td>
            </tr>
            <tr>
                <th class="redcol">Price</th>
                <td class="whitecol">{{ product.price }}</td>
            </tr>
            <tr>
                <th class="redcol">Image</th>
                <td class="whitecol">{{ product.image }}</td>
            </tr>
        </tbody>
    </table>

    <a class="colLink" href="{{ path('product_index') }}">back to list</a>

    <a class="colLink" href="{{ path('product_edit', {'id': product.id}) }}">edit</a>

    {{ include('product/_delete_form.html.twig') }}
{% endblock %}
