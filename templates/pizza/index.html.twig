{% extends 'base.html.twig' %}

{% block title %}Pizza index{% endblock %}

{% block body %}
    <h1>Pizza index</h1>

    <table class="table">
        <thead>
            <tr class="redcol">
                <th>Id</th>
                <th>Nom</th>
                <th>Ingrédients</th>
                <th>Sauce</th>
                <th>Prix de la petite pizza</th>
                <th>Prix de la grande pizza</th>
                <th>Autre (pizza sucrée)</th>
                <th>Image</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for pizza in pizzas %}
            <tr class="">
                <td>{{ pizza.id }}</td>
                <td>{{ pizza.name }}</td>
                <td>{{ pizza.ingredient }}</td>
                <td>{{ pizza.sauce }}</td>
                <td>{{ pizza.price }}</td>
                <td>{{ pizza.highPrice }}</td>
                <td>{{ pizza.other ? 'Oui' : 'Non' }}</td>
                <td>{{ pizza.image }}</td>
                <td>
                    <a href="{{ path('pizza_show', {'id': pizza.id}) }}">détails</a>
                    <a href="{{ path('pizza_edit', {'id': pizza.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('pizza_new') }}">Create new</a>
{% endblock %}
