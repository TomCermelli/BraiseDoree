{% extends 'base.html.twig' %}

{% block title %}Hello ContactController!{% endblock %}

{% block body %}
<link href="{{asset('css/contact.css') }}" rel="stylesheet" type="text/css"/>

{% for message in app.flashes('success') %}
<div class="alert alert-success">
  <p>Votre mail a été envoyé avec succès</p>
  {{ message }}
</div>
{% endfor %}


<div class="placementElem">

  <div class="df">
    <div class="adresse">
      <h3 class="adresseTitle">Adresse</h3>
      <p class="adresseInfo">36 Avenue du Professeur Grasset</p>
      <p class="adresseInfo">34090 Montpellier</p>
      <p class="adresseInfo">Tel : 06 43 59 16 34</p>
    </div>
  </div>

  <div id="contactForm" class="df">
    {{form_start(form)}}
    <div class="df">
      <div class="form-group inputDisposition">
        {{ form_label(form.lastname, 'Nom') }}
        {{form_row(form.lastname, {'label': ' ', 'attr': {'placeholder': 'Nom ...', 'class': 'form-control'} })}}
      </div>
      <div class="form-group inputDisposition">
        {{ form_label(form.firstname, 'Prénom') }}
        {{form_row(form.firstname, {'label': ' ', 'attr': {'placeholder': 'Prénom ...', 'class': 'form-control'} })}}
      </div>
    </div>
    <div class="df">
      <div class="form-group inputDisposition">
        {{ form_label(form.subject, 'Sujet') }}
        {{form_row(form.subject, {'label': ' ', 'attr': {'placeholder': 'Sujet ...', 'class': 'form-control'} })}}
      </div>
      <div class="form-group inputDisposition">
        <span class="labelDisposition">{{ form_label(form.email, 'Email') }}</span>
        {{form_row(form.email, {'label': ' ', 'attr': {'placeholder': 'Email ...', 'class': 'form-control'} })}}
      </div>
    </div class="df">
    {{ form_label(form.message, 'Message') }}
    {{form_row(form.message, {'label': ' ', 'attr': {'placeholder': 'Ecrivez votre message ...', 'class': 'form-control'} })}}
    <div>
      <input type="submit" id="submit" name="submit" value="Envoyer">
    </div>
    {{form_end(form)}}
  </div>

</div>
{% endblock %}
