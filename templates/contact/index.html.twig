{% extends 'base.html.twig' %}

{% block title %}Hello ContactController!{% endblock %}

{% block body %}

{% for message in app.flashes('success') %}
<div class="alert alert-success">
  <p>Votre mail a été envoyé avec succès</p>
  {{ message }}
</div>
{% endfor %}


<div class="df">

  <div>
    <h3>Adresse</h3>
    <p>36 Avenue du Professeur Grasset</p>
    <p>34090 Montpellier</p>
    <p>Tel : 06 43 59 16 34</p>
  </div>

  <div id="contactForm" class="df">
    {{form_start(form)}}
    <div class="df">

      {{form_row(form.lastname)}}

      {{form_row(form.firstname)}}
    </div>
    <div class="df">
      {{form_row(form.subject)}}
      {{form_row(form.email)}}
    </div class="df">
    {{form_row(form.message)}}
    <div>
      <input type="submit" id="submit" name="submit" value="Envoyer">
    </div>
    {{form_end(form)}}
  </div>

</div>
{% endblock %}
